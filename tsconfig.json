{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],

    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,

    "sourceMap": true,
    "declaration": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
